{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@contexts/*": ["tests/contexts/*"],
      "@fixtures/*": ["tests/fixtures/*"],
      "@pages/*": ["tests/pages/*"],
      "@support/*": ["tests/support/*"],
      "@actions/*": ["tests/actions/*"],
      "@config/*": ["tests/config/*"]
    }
  },
  "include": ["tests/**/*.ts"]
}

